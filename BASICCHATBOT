# simple_chatbot.py

import random

def get_response(user_input):
    text = user_input.lower().strip()
    # predefined responses
    if text in ["hello", "hi", "hey"]:
        return random.choice(["Hello!", "Hi there!", "Hey!"])
    elif "how are you" in text:
        return "I'm just a program, but I'm doing well. Thank you!"
    elif "your name" in text:
        return "I'm a simple Python chatbot."
    elif "joke" in text:
        return "Why don’t scientists trust atoms? Because they make up everything!"
    elif text in ["bye", "exit", "quit"]:
        return "Goodbye! Have a great day!"
    else:
        return "Sorry, I don’t understand that."

def main():
    print("Chatbot: Hi! I am a simple chatbot. Type 'bye' to exit.")
    while True:
        user_text = input("You: ")
        response = get_response(user_text)
        print("Chatbot:", response)
        if user_text.lower().strip() in ["bye", "exit", "quit"]:
            break

if __name__ == "__main__":
    main()
